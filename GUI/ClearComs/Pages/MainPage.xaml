<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClearComs.Pages.MainPage"
             Title="ClearComs">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <!-- Header Image -->
            <Image Source="clearcoms.png"
                   Aspect="AspectFit"
                   HorizontalOptions="Center"
                   HeightRequest="120"/>

            <!-- Navigation Buttons -->
            <Button Text="Flash Cards"
                    Clicked="OnFlashcardsClicked"/>

            <Button Text="Quizzes"
                    Clicked="OnQuizzesClicked"/>

            <Button Text="Communication"
                    Clicked="OnCommunicationClicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
