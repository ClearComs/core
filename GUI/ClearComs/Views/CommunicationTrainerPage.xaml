<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ClearComs.Views.CommunicationTrainerPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:ClearComs.ViewModels"
    Title="Communication Trainer">

    <ContentPage.BindingContext>
        <vm:CommunicationTrainerViewModel />
    </ContentPage.BindingContext>

    <Grid Padding="20" RowDefinitions="Auto,*,Auto" RowSpacing="20">

        <Label Text="Communication Trainer"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,10" />

        <VerticalStackLayout Grid.Row="1" Spacing="15">
            <Label Text="{Binding CurrentPrompt}"
                   FontSize="20"
                   HorizontalTextAlignment="Center"
                   TextColor="#333"
                   LineBreakMode="WordWrap" />

            <Button Text="â–¶ Play Prompt"
                    Command="{Binding PlayPromptCommand}"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    CornerRadius="10" />

            <Button Text="ðŸŽ™ Start Recording"
                    Command="{Binding RecordCommand}"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="10" />

            <ActivityIndicator IsRunning="{Binding IsProcessing}"
                               IsVisible="{Binding IsProcessing}"
                               Color="#2196F3" />

            <Label Text="{Binding FeedbackText}"
                   FontSize="18"
                   TextColor="#444"
                   LineBreakMode="WordWrap"
                   HorizontalTextAlignment="Center"
                   Margin="10,20,10,0" />
        </VerticalStackLayout>

    </Grid>
</ContentPage>
